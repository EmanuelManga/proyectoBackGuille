<style>
    .form-group{ flex-basis: 50% !important; box-sizing: border-box !important; }
</style>

<div id="product-conteiner" style="width: 80%;margin: auto;padding: 3rem 0">
    <ul id="lista-product" style="display: flex;flex-direction: row;flex-wrap: wrap;gap: 1rem;">
        {{#each productos}}
            <div id="product-{{this.producId}}" class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.thumbnail}}" alt="Card image cap" />
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">Precio:{{this.price}}</p>
                    <p class="card-text">Stock:{{this.stock}}</p>
                </div>
                <button type="button" class="btn btn-danger" onclick="borrarProducto('{{this.producId}}')">Delete</button>
            </div>
        {{/each}}
    </ul>

</div>
<div id="form-conteiner" style="width: 80%;margin: auto; padding-bottom: 3rem;">
    <form id="product-form" style="width: 50%; margin: auto;display: flex; flex-wrap: wrap;">
        <div class="form-group">
            <label for="title">Titulo</label>
            <input type="text" class="form-control" id="form-product-title" name="title" />
        </div>
        <div class="form-group">
            <label for="description">Descripcion</label>
            <input type="text" class="form-control" id="form-product-description" name="description" />
        </div>
        <div class="form-group">
            <label for="price">Precio</label>
            <input type="text" class="form-control" id="form-product-price" name="price" />
        </div>
        <div class="form-group">
            <label for="thumbnail">Thumbnail</label>
            <input type="text" class="form-control" id="form-product-thumbnail" name="thumbnail" />
        </div>
        <div class="form-group">
            <label for="code">Codigo</label>
            <input type="text" class="form-control" id="form-product-code" name="code" />
        </div>
        <div class="form-group">
            <label for="stock">Stock</label>
            <input type="text" class="form-control" id="form-product-stock" name="stock" />
        </div>
        <div class="form-group">
            <label for="status">Estado</label>
            <input type="text" class="form-control" id="form-product-status" name="status" />
        </div>
        <div class="form-group">
            <label for="category">Cateoria</label>
            <input type="text" class="form-control" id="form-product-category" name="category" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
<script src="/js/funcionesLiveProduct.js"></script>